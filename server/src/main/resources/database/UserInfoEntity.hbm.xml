<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="database.UserInfoEntity" table="UserInfo" schema="dbo" catalog="dbPocketTest">
        <id name="UserId">
            <column name="UserID" sql-type="smallint"/>
        </id>
        <property name="UserName">
            <column name="UserName" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="PasswdHash">
            <column name="PasswdHash" sql-type="uniqueidentifier"/>
        </property>
    </class>
</hibernate-mapping>