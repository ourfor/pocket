<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="database.RoomEntity" table="Room" schema="dbo" catalog="dbPocketTest">
        <id name="roomId">
            <column name="RoomID" sql-type="smallint"/>
        </id>
        <property name="roomName">
            <column name="RoomName" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="siteCount">
            <column name="SiteCount" sql-type="smallint"/>
        </property>
        <property name="building">
            <column name="Building" sql-type="varchar(50)" length="50"/>
        </property>
    </class>
</hibernate-mapping>