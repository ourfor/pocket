<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="database.StudentEntity" table="Student" schema="dbo" catalog="dbPocketTest">
        <id name="StuId">
            <column name="StuID" sql-type="varchar(15)" length="15"/>
        </id>
        <property name="StuName">
            <column name="StuName" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="ClassId">
            <column name="ClassID" sql-type="smallint"/>
        </property>
        <property name="sex">
            <column name="Sex" sql-type="bit"/>
        </property>
        <property name="passwdHash">
            <column name="PasswdHash" sql-type="uniqueidentifier" not-null="true"/>
        </property>
        <property name="mac">
            <column name="MAC" sql-type="char(12)" length="12"/>
        </property>
        <property name="siteNo">
            <column name="SiteNo" sql-type="tinyint"/>
        </property>
    </class>
</hibernate-mapping>